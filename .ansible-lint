---
# Collection wide lint-file
# DO NOT CHANGE
exclude_paths:
  - .cache/
  - .github/
  - playbooks/
enable_list:
  - yaml
skip_list:
  # We don't want to enforce new Ansible versions for Galaxy:
  - meta-runtime[unsupported-version]
  - no-handler
  - yaml[line-length]
  - no-changed-when
  - ignore-errors
  - package-latest
  - name[template]
  - risky-shell-pipe
  - command-instead-of-shell
